<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/res_1"
    tools:context=".Your_CV">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:text="YOUR CV" />

    <TextView
        android:id="@+id/textView2"
        android:background="@drawable/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:text="Name:    " />

    <TextView
        android:id="@+id/cvName"
        android:background="@drawable/res_4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView3"
        android:background="@drawable/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Age:    "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cvAge"
        android:background="@drawable/res_4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:text="Age" />

    <TextView
        android:id="@+id/textView4"
        android:background="@drawable/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Your Job:    "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cvJob"
        android:background="@drawable/res_4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:text="Your Job" />

    <TextView
        android:id="@+id/textView5"
        android:background="@drawable/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Phone Number:    "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cvPhoneNumber"
        android:background="@drawable/res_4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Phone Number"
        android:textColor="#E40022FF"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView6"
        android:background="@drawable/res_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Email:    "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cvEmail"
        android:background="@drawable/res_4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:text="Email" />

    <Button
        android:id="@+id/back"
        android:background="@drawable/res_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Back" />

</LinearLayout>